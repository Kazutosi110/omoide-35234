<div class="contents row">
  <% @tweets.each do |tweet| %>
    <div class="content_post">
      <%= image_tag tweet.image, class: "tweet_img" %>
      <div class="more">
        <span><%= image_tag 'arrow_under.png' %></span>
        <ul class="more_list">
          <li>
            <%= link_to '詳細', tweet_path(tweet.id), method: :get %>
          </li>
          <li>
            <%= link_to '編集', "#", method: :get %>
          </li>
          <li>
            <%= link_to '削除', "#", method: :delete %>
          </li>
        </ul>
      </div>
      <span class="name">
        <%= link_to tweet.store_name, "#", class: :card_title, method: :get %>
        <%= link_to "by #{tweet.user.name}", "/users/#{tweet.user_id}", class: :tweet__user %>
      </span>
    </div>
  <% end %>
</div>

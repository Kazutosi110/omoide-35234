<%= form_with(url: search_tweets_path, local: true, method: :get, class: "search-form") do |form| %>
  <%= form.text_field :keyword, placeholder: "ユーザー名・年齢で検索する", class: "search-input" %>
  <%= form.submit "検索", class: "search-btn" %>
<% end %>
<main class="main">
  <div class="inner">
    <% if user_signed_in? %>
      <div class="greeting">
        どうもこんにちは、
        <%= link_to current_user.name, "/users/#{current_user.id}", class: :greeting__link%>
        さん！
      </div>
    <% end %>
    <div class='item-contents'>
      <h2 class='title'>検索結果一覧</h2>
      <%= link_to '新規投稿はこちら(要ログイン)', new_tweet_path, class: "subtitle" %>
    </div>
    <div class="card__wrapper">
      <%= render partial: 'tweet', collection: @tweets %>
    </div>
  </div>
</main>
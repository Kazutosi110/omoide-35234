<main class="main">
  <div class="inner">
    <div class="prototype__wrapper">
      <p class="prototype__hedding">
        <%= @tweet.store_name %>
      </p>
      <%= link_to "by #{@tweet.user.name}", "#", class: :prototype__user %>
      <%# プロトタイプの投稿者とログインしているユーザーが同じであれば以下を表示する %>
      <% if user_signed_in? && current_user.id == @tweet.user_id %>
        <div class="prototype__manage">
          <%= link_to "編集する", edit_tweet_path(@tweet.id), class: :prototype__btn %>
          <%= link_to "削除する", "#", class: :prototype__btn, method: :delete %>
        </div>
      <% end %>
      <%# // プロトタイプの投稿者とログインしているユーザーが同じであれば上記を表示する %>
      <div class="prototype__image">
        <%= image_tag @tweet.image %>
      </div>
      <div class="prototype__body">
        <div class="prototype__detail">
          <p class="detail__title">お店の種類</p>
          <p class="detail__message">
            <%= @tweet.store_type %>
          </p>
        </div>
        <div class="prototype__detail">
          <p class="detail__title">R指定</p>
          <p class="detail__message">
            <%= "#{@tweet.user.age}歳" %>
          </p>
        </div>
        <div class="prototype__detail">
          <p class="detail__title">お店の紹介</p>
          <p class="detail__message">
            <%= @tweet.information %>
          </p>
        </div>
      </div>
    </div>
  </div>
</main>
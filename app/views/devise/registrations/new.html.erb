<div class="contents row">
  <div class="container">
    <h2>ユーザー情報入力</h2>
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, id:"user_email", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード（6文字以上）" %><br />
        <%= f.password_field :password, id:"user_password", autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "パスワード再入力" %><br />
        <%= f.password_field :password_confirmation, id:"user_password_confirmation", autocomplete: "off" %>
      </div>

      <div class="field">
          <%= f.label :profile, "プロフィール" %><br />
          <%= f.text_area :profile, class: :form__text, id:"user_profile" %>
      </div>

      <div class="field">
        <%= f.label :age, "年齢" %><br />
        <%= f.email_field :age, id:"user_age" %>
      </div>

      <div class="actions">
        <%= f.submit "ユーザー新規登録" %>
      </div>
    <% end %>
  </div>
</div>
